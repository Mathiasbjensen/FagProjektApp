<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mysqlexampleproject">

    <!-- This shit added to allow the app to go on the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.manifest.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Monitor and Control"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChangeDataActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".FindBluetoothActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".getDataActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ChangeStatistics"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".GraphTabs"
            android:label="@string/title_activity_graph_tabs"
            android:theme="@style/graphTheme" />
        <activity
            android:name=".passwordPopUp"
            android:theme="@style/AppTheme.PopMe"/>
    </application>

</manifest>